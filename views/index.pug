extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="./stylesheets/index.css")
  //- add page specific js
  script(src="./javascripts/task.js" type="module" defer)
  script(src="./javascripts/accordion.js" type="module" defer)

block content
  .container
    .user-sidebar
      .user-corner
        h2 BluePrint
        p Welcome, Rob
      .nav-area
        //- In the future we will loop through projects from db
        ul
          li Project 1
          li Project 2
          li Project 3
        ul
          li Group 1
          li Group 2
          li Group 3
    .projects-area
      .search
        input(id="searchbar" type="text" placeholder="Search")
        button(type="submit" id="search-btn")
          i(class="fa fa-search")
      .accordion-area
        button.accordion Shopping List
        .panel
          ul
            //- Eventually we will loop through through tasks here
            li.project-task-list-item Buy Milk
            li.project-task-list-item Buy Eggs
            li.project-task-list-item Buy Cereal
        button.accordion Around the House
        .panel
          ul
            //- Eventually we will loop through through tasks here
            li.project-task-list-item Fix the roof
            li.project-task-list-item Change garage lightbulb
            li.project-task-list-item Clean the basement
        button.accordion Work Project
        .panel
          ul
            //- Eventually we will loop through through tasks here
            li.project-task-list-item Go golfing with boss
            li.project-task-list-item Let Boss win
            li.project-task-list-item Make fun of Steve in Accounting
    .tasks-area
      p Select a task to edit.



