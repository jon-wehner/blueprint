extends layout
include utils.pug
append head
  link(rel="stylesheet" href="./stylesheets/index.css")
  script(src="./javascripts/task.js" type="module" defer)
  script(src="./javascripts/accordion.js" type="module" defer)
  script(src="./javascripts/buttons.js" type="module" defer)
  script(src="./javascripts/group.js" type="module" defer)

block content
  .container
    .user-sidebar.page-area-blue
      .user-corner
        h2 BluePrint
        p Welcome, #{user.username}
        p: a(href="/users/logout") Logout
      .nav-area
        ul
          each group in groups
            li= group.name
            button(type="button", value=group.name, class="group-edit-button", id=group.id data-token=token) Edit
        button(type="button", id="add-group") Add Group    
    .projects-area
      .search
        input(id="searchbar" type="text" placeholder="Search")
        button(type="submit" id="search-btn")
          i(class="fa fa-search")
      .accordion-area
        each group in groups
          each project in group.Projects
              button.accordion= project.name
              .panel
                ul
                  each task in project.Tasks
                    li.project-task-list-item= task.name
                    button.task-delete-btn(data-id=task.id) Delete
              button(type="button" class="project-edit-button" id=project.id value=project.name) Edit
        button(type="button", id="add-project") Add Project      
    .tasks-area
      include forms.pug
