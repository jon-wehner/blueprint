extends layout
append head
  link(rel="stylesheet" href="./stylesheets/error.css")

block content
  if error.status === 404
    .error-page
      img(src="data:image/svg+xml;base64,")
      h1 404
      h2 The page you're looking for couldn't be found.  Please go 
        a(href="/") back
        |  and try again.
  else
    h1= message
    h2= error.status
    pre #{error.stack}
